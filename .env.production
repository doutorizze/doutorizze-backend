# Configurações de Produção - DOUTORIZZE
NODE_ENV=production
PORT=3000

# Banco de Dados
DB_HOST=localhost
DB_USER=doutorizze_user
DB_PASSWORD=senha_segura
DB_NAME=doutorizze_db
DB_PORT=3306

# JWT
JWT_SECRET=seu_jwt_secret_super_seguro_mude_isso
JWT_EXPIRES_IN=7d

# Parcelamais
PARCELAMAIS_API_KEY=sua_api_key_parcelamais
PARCELAMAIS_SECRET=seu_secret_parcelamais
